                </td>
                <td>
                    <p>@item.technology</p>
                </td>
                <td>
                    @Html.DisplayName(item.rating.ToString())
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPost", new { id = item.postid }) |
                    @Html.ActionLink("Delete", "DeletePost", new { id = item.postid })
                </td>
            </tr>
        }

    </table>
}
@if (ViewBag.BlogMessage != null)
{
    <div class="text-center alert alert-danger">
        <strong>Sorry! </strong>@ViewBag.BlogMessage<a href="~/Blog/Create">Create one?</a>
    </div>
